public class LeapYear {

  public static void main(String[] args) {
    int year = 1998;

    String result;

    result =
      (
        (year % 4 == 0 && year % 100 != 0)
          ? "is a leap year."
          : (year % 400 == 0) ? "is a leap year." : "is not a leap year."
      );

    // Append the year and format the string
    System.out.println(year + " " + result);
  }
}
